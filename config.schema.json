{
  "pluginAlias": "SensePowerMeter",
  "pluginType": "accessory",
  "singular": false,
  "headerDisplay": "Enhanced Homebridge plugin for Sense Home Energy Monitor with comprehensive API integration.",
  "footerDisplay": "For more information visit the [plugin documentation](https://github.com/seeloesix/homebridge-sense-energy-monitor#readme).",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Accessory Name",
        "type": "string",
        "default": "Sense Energy Meter",
        "required": true,
        "description": "The name that will appear in HomeKit"
      },
      "username": {
        "title": "Sense Username/Email",
        "type": "string",
        "required": true,
        "format": "email",
        "description": "Your Sense account email address"
      },
      "password": {
        "title": "Sense Password",
        "type": "string",
        "required": true,
        "description": "Your Sense account password"
      },
      "monitor_id": {
        "title": "Monitor ID",
        "type": "string",
        "description": "Specific monitor ID (leave empty for auto-detection)",
        "placeholder": "Optional - will auto-detect if empty"
      },
      "pollingInterval": {
        "title": "Polling Interval (seconds)",
        "type": "integer",
        "default": 60,
        "minimum": 30,
        "maximum": 3600,
        "description": "How often to fetch trend data from Sense (30-3600 seconds)"
      },
      "useWebSocket": {
        "title": "Use WebSocket for Real-time Data",
        "type": "boolean",
        "default": true,
        "description": "Enable WebSocket connection for real-time power updates"
      },
      "includeSolar": {
        "title": "Include Solar Power Monitoring",
        "type": "boolean",
        "default": true,
        "description": "Monitor solar power generation (if available)"
      },
      "includeDevices": {
        "title": "Include Individual Device Monitoring",
        "type": "boolean",
        "default": true,
        "description": "Track power usage of individual detected devices"
      },
      "verbose": {
        "title": "Verbose Logging",
        "type": "boolean",
        "default": false,
        "description": "Enable detailed debug logging"
      }
    }
  },
  "layout": [
    {
      "type": "section",
      "title": "Required Settings",
      "expandable": false,
      "expanded": true,
      "items": [
        "name",
        "username",
        "password"
      ]
    },
    {
      "type": "section",
      "title": "Optional Settings",
      "expandable": true,
      "expanded": false,
      "items": [
        "monitor_id",
        "pollingInterval",
        "useWebSocket"
      ]
    },
    {
      "type": "section",
      "title": "Feature Settings",
      "expandable": true,
      "expanded": false,
      "items": [
        "includeSolar",
        "includeDevices"
      ]
    },
    {
      "type": "section",
      "title": "Debug Settings",
      "expandable": true,
      "expanded": false,
      "items": [
        "verbose"
      ]
    }
  ]
}